<%- include ("partials/header") %>
    <div class="ui container">
    <h2 style="text-align: center;"><%= brandName %> Cars</h2>

        <div class="ui top attached segment">
            <div class="ui divided items">
                <% blogs.forEach(function(blog){ %>
            
            <div class="item">
                <div class="image" style="height: 100%; width: 260px;"><img src="<%= blog.image1 %>"></div>
                <div class="content">
                <a class="header" href="/brands/<%=brandName%>/<%= blog._id %>"><%= blog.title %></a>
                
                <div class="description"><span><%= blog.price %></span></div>
                
                <div class="extra"><a class="ui floated basic violet button" href="/brands/<%= brandName %>/<%= blog._id %>">Read Specs ></a></div>
            </div>
        </div>
            <% }); %>
        </div>
    </div>
</div>

<%- include("partials/footer") %>